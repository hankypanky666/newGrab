extends layout

block content
        form.form-signin(method="post")
            p=user
            if errorMessage
                p=errorMessage

            h2.form-signin-heading Please sign in
            label.sr-only(for="inputEmail") Email address
            input#inputEmail.form-control(type="text", name="username", placeholder="login", required="" autofocus="")
            label.sr-only(for="inputPassword") Password
            input#inputPassword.form-control(type="password", name="password", placeholder="Password" required="")
            .checkbox
                label
                    input(type="checkbox", value="remember-me")
                    |Remember me
            button.btn.btn-lg.btn-primary.btn-block(type="submit")
                span.glyphicon.glyphicon-log-in
                |&nbsp;Sign in
